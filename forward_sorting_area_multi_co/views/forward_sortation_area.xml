<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="forward_sortation_area_multi_company_form" model="ir.ui.view">
        <field name="name">Forward Sorting Area multi company Form</field>
        <field name="model">forward.sortation.area</field>
        <field name="inherit_id" ref="forward_sorting_area.forward_sortation_area_form"/>
        <field name="arch" type="xml">
            <field name="territory_ids" position="after">
                <field name="company_id" readonly="1" invisible="1"/>
            </field>
        </field>
    </record>

    <record id="forward_sortation_area_multi_company_tree" model="ir.ui.view">
        <field name="name">Forward Sorting Area multi company List</field>
        <field name="model">forward.sortation.area</field>
        <field name="inherit_id" ref="forward_sorting_area.forward_sortation_area_tree"/>
        <field name="arch" type="xml">
            <field name="active" position="before">
                <field name="company_id" readonly="1" invisible="1"/>
            </field>
        </field>
    </record>

</odoo>
