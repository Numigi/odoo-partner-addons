<odoo>
    <data noupdate="1">
        <!-- Multi - Company Rules -->
        <record model="ir.rule" id="res_territory_comp_rule">
            <field name="name">Territory multi-company</field>
            <field name="model_id" ref="forward_sorting_area.model_res_territory"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]
            </field>
        </record>
        <record model="ir.rule" id="forward_sortation_area_comp_rule">
            <field name="name">Forward Sorting Areas multi-company</field>
            <field name="model_id" ref="forward_sorting_area.model_forward_sortation_area"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]
            </field>
        </record>
    </data>
</odoo>
