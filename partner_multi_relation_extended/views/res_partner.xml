<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_partner_kanban_view_with_relations_badge" model="ir.ui.view">
        <field name="name">Partner Kanban With Relations Badge</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.res_partner_kanban_view"/>
        <field name="arch" type="xml">
            <field name="mobile" position="after">
                <field name="relation_count"/>
            </field>
            <xpath expr="//div[@class='oe_kanban_partner_links']" position="inside">
                <span class="badge relation" t-if="record.relation_count.value > 0">
                    <i class="fa fa-fw fa-users"/>
                    <t t-esc="record.relation_count.value"/>
                </span>
            </xpath>
        </field>
    </record>

    <menuitem
        id="menu_res_partner_relation_contacts"
        sequence="2"
        parent="contacts.menu_contacts"
        action="partner_multi_relation.action_res_partner_relation_all"
    />

</odoo>
