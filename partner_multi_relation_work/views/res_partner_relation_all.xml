<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="tree_res_partner_relation_all_with_strength" model="ir.ui.view">
        <field name="name">Add the field strength to partner relations</field>
        <field name="model">res.partner.relation.all</field>
        <field name="inherit_id" ref="partner_multi_relation.tree_res_partner_relation_all"/>
        <field name="arch" type="xml">
            <field name="other_partner_id" position="after">
                <field name="strength"/>
            </field>
        </field>
    </record>


    <record id="tree_res_partner_relation_all_with_note" model="ir.ui.view">
        <field name="name">Add the field note to partner relations</field>
        <field name="model">res.partner.relation.all</field>
        <field name="inherit_id" ref="partner_multi_relation.tree_res_partner_relation_all"/>
        <field name="arch" type="xml">
            <field name="date_end" position="after">
                <field name="note"/>
            </field>
        </field>
    </record>

</odoo>
