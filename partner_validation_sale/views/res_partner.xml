<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_partner_form_view_validation_sale" model="ir.ui.view">
        <field name="name">res.partner.form.validation.sale</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sale']/field[@name='customer']" position="after">
                <field name="customer_state"
                       attrs="{'invisible': ['|', '|', ('customer','=', False), ('is_company','=', False), ('parent_id', '=', True)]}"/>
                <div attrs="{'invisible': ['|', '|', ('customer','=', False), ('is_company','=', False), ('parent_id', '=', True)]}">
                </div>
                <div attrs="{'invisible': ['|', '|', ('customer','=', False), ('is_company','=', False), ('parent_id', '=', True)]}">
                 <button name="reject_customer"
                        type="object"
                        string="Reject"
                        style="width: 49%"
                        attrs="{'invisible': ['|', ('customer', '=', False), ('customer_state','=', 'new')]}"
                        groups="partner_validation_sale.group_partner_restricted_field_sales">
                </button>
                <button name="approve_customer"
                        type="object"
                        string="Approve"
                        class="oe_highlight"
                        style="width: 49%"
                        attrs="{'invisible': ['|', ('customer', '=', False), ('customer_state','in', ('new', 'approved'))]}"
                        groups="partner_validation_sale.group_partner_restricted_field_sales">
                </button>
                <button name="confirm_customer"
                        type="object"
                        string="Confirm"
                        style="width: 49%"
                        class="oe_highlight"
                        attrs="{'invisible': ['|', ('customer', '=', False), ('customer_state','!=', 'new')]}"
                        groups="partner_validation_sale.group_partner_restricted_field_sales">
                </button>
                </div>
            </xpath>
        </field>
    </record>

</odoo>