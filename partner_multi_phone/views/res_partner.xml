<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='phone']" position="before">
                <field name="phone_main"/>
            </xpath>

            <field name="phone" position="attributes">
                <attribute name="string">Work</attribute>
                <attribute name="attrs">{'required': [('phone_main', '=', 'work')]}</attribute>
            </field>

            <field name="phone" position="after">
                <field name="phone_extension" widget="phone_extension" placeholder="Ext."/>
            </field>

            <field name="mobile" position="attributes">
                <attribute name="attrs">{'required': [('phone_main', '=', 'mobile')]}</attribute>
            </field>

            <xpath expr="//field[@name='mobile']/.." position="after">
                <label for="phone_home"/>
                <div class="o_row">
                    <field name="phone_home" widget="phone"
                        attrs="{'required': [('phone_main', '=', 'home')]}"/>
                    <button
                        type="action"
                        name="%(sms.send_sms_form_action)d"
                        class="btn-xs btn-link mb4 fa fa-envelope-o"
                        attrs="{'invisible':[('phone_home', '=', False)]}"
                        context="{'field_name': 'phone_home'}"
                        />
                </div>
                <label for="phone_other"/>
                <div class="o_row">
                    <field name="phone_other" widget="phone"
                        attrs="{'required': [('phone_main', '=', 'other')]}"/>
                    <field name="phone_other_extension" widget="phone_extension" placeholder="Ext."/>
                    <button
                        type="action"
                        name="%(sms.send_sms_form_action)d"
                        class="btn-xs btn-link mb4 fa fa-envelope-o"
                        attrs="{'invisible':[('phone_other', '=', False)]}"
                        context="{'field_name': 'phone_other'}"
                        />
                </div>
            </xpath>

            <!-- Nested kanban cards inside the form view -->
            <xpath expr="//kanban/field[@name='phone']" position="after">
                <field name="phone_extension"/>
                <field name="phone_home"/>
                <field name="phone_other"/>
                <field name="phone_other_extension"/>
            </xpath>
            <div t-if="record.phone.raw_value" position="replace">
                <div t-if="record.phone.raw_value">
                    Work: <field name="phone"/>
                    <span t-if="record.phone_extension.raw_value">
                        <span class="o_phone_extension__label">Ext: </span>
                        <field name="phone_extension"/>
                    </span>
                </div>
            </div>
            <div t-if="record.mobile.raw_value" position="after">
                <div t-if="record.phone_home.raw_value">
                    Home: <field name="phone_home"/>
                </div>
                <div t-if="record.phone_other.raw_value">
                    Other: <field name="phone_other"/>
                    <span t-if="record.phone_other_extension.raw_value">
                        <span class="o_phone_extension__label">Ext: </span>
                        <field name="phone_other_extension"/>
                    </span>
                </div>
            </div>

            <!-- Nested contact form inside the form view -->
            <xpath expr="//notebook//form//field[@name='phone']" position="before">
                <field name="phone_main"/>
            </xpath>

            <xpath expr="//notebook//form//field[@name='phone']" position="attributes">
                <attribute name="string">Work</attribute>
                <attribute name="attrs">{'required': [('phone_main', '=', 'work')]}</attribute>
            </xpath>

            <xpath expr="//notebook//form//field[@name='phone']" position="replace">
                <label for="phone"/>
                <div class="o_row">
                    <field name="phone" widget="phone"
                        attrs="{'required': [('phone_main', '=', 'work')]}"/>
                    <field name="phone_extension" widget="phone_extension" placeholder="Ext."/>
                </div>
            </xpath>

            <xpath expr="//notebook//form//field[@name='mobile']" position="attributes">
                <attribute name="attrs">{'required': [('phone_main', '=', 'mobile')]}</attribute>
            </xpath>

            <xpath expr="//notebook//form//field[@name='mobile']" position="after">
                <label for="phone_home"/>
                <div class="o_row">
                    <field name="phone_home" widget="phone"
                        attrs="{'required': [('phone_main', '=', 'home')]}"/>
                </div>
                <label for="phone_other"/>
                <div class="o_row">
                    <field name="phone_other" widget="phone"
                        attrs="{'required': [('phone_main', '=', 'other')]}"/>
                    <field name="phone_other_extension" widget="phone_extension" placeholder="Ext."/>
                </div>
            </xpath>

        </field>
    </record>

</odoo>
