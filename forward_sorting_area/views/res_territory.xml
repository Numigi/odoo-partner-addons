<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_territory_form" model="ir.ui.view">
        <field name="name">Territory Form</field>
        <field name="model">res.territory</field>
        <field name="arch" type="xml">
            <form string="Territory">
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group name="group_1">
                            <field name="fsa_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        </group>
                        <group name="group_2">
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="res_territory_tree" model="ir.ui.view">
        <field name="name">Territory List</field>
        <field name="model">res.territory</field>
        <field name="arch" type="xml">
            <tree string="Territories" editable="top">
                <field name="name" width="300px"/>
                <field name="fsa_ids" widget="many2many_tags" options="{'no_create': True}"/>
                <field name="active"/>
                <button type="object" name="get_formview_action" icon="fa-info"/>
            </tree>
      </field>
    </record>

    <record id="res_territory_action" model="ir.actions.act_window">
        <field name="name">Territories</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.territory</field>
        <field name="view_mode">tree</field>
        <field name="view_type">form</field>
    </record>

    <menuitem
        action="res_territory_action"
        id="menu_res_territory_action"
        parent="contacts.menu_localisation"
        sequence="7"
    />

</odoo>
