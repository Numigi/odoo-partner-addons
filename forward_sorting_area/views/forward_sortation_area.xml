<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="forward_sortation_area_form" model="ir.ui.view">
        <field name="name">Forward Sorting Area Form</field>
        <field name="model">forward.sortation.area</field>
        <field name="arch" type="xml">
            <form string="FSA">
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group name="group_1">
                            <field name="sector"/>
                            <field name="province"/>
                            <field name="latitude"/>
                            <field name="longitude"/>
                        </group>
                        <group name="group_2">
                            <field name="territory_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="forward_sortation_area_tree" model="ir.ui.view">
        <field name="name">Forward Sorting Area Form</field>
        <field name="model">forward.sortation.area</field>
        <field name="arch" type="xml">
            <tree string="FSA" editable="top">
                <field name="name"/>
                <field name="territory_ids" widget="many2many_tags" options="{'no_create': True}"/>
                <field name="sector"/>
                <field name="province"/>
                <field name="latitude"/>
                <field name="longitude"/>
                <field name="active"/>
                <button type="object" name="get_formview_action" icon="fa-info"/>
            </tree>
      </field>
    </record>

    <record id="forward_sortation_area_action" model="ir.actions.act_window">
        <field name="name">FSA</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">forward.sortation.area</field>
        <field name="view_mode">tree</field>
        <field name="view_type">form</field>
    </record>

    <menuitem
        action="forward_sortation_area_action"
        id="menu_forward_sortation_area_action"
        parent="contacts.menu_localisation"
        sequence="6"
    />

</odoo>
